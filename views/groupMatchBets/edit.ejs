<% include ../partials/header.ejs %>

<div class="container">
     <div class="row">
          <!--The Heading-->
          <h1 style="text-align: center;">
               Edit <%= groupMatchBet.homeTeamName %> vs <%= groupMatchBet.awayTeamName %>
          </h1>
          <!--The Form-->
          <div style="width: 30%; margin: 25px auto">
               <form action="/group-match-bets/<%= groupMatchBet._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="homeTeamName" placeholder="homeTeamName">
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="text" name="awayTeamName" placeholder="awayTeamName">
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="text" name="stadium" placeholder="stadium">
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="text" name="betStatus" placeholder="betStatus">
                    </div>
                    <div class="form-group">
                         <input class="form-control" id="datetimepicker" type="text" name="kickOffDate">
                    </div>
                    <div class="form-group">
                         <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
               </form>
               <!-- Link to go back -->
               <a href="/bets">Go Back</a>
          </div>   
     </div>
</div>

<script type = "text/javascript" language = "javascript">
  jQuery('#datetimepicker').datetimepicker();
</script>

<% include ../partials/footer %>