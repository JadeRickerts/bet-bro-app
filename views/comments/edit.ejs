<% include ../partials/header.ejs %>

<div class="container">
     <div class="row">
          <!--The Heading-->
          <h1 style="text-align: center;">Edit a Comment</h1>
          <!--The Form-->
          <div style="width: 30%; margin: 25px auto">
               <form action="/group-match-bets/<%= bet_id %>/group-match-bet-proposals/<%= betProposal_id %>/comments/<%= comment._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                         <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
               </form>
               <!-- Link to go back -->
               <a href="/group-match-bets/<%= bet_id %>/group-match-bet-proposals/<%= betProposal_id %>">Go Back</a>
          </div>   
     </div>
</div>
<% include ../partials/footer %>