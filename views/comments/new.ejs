<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <!--The Heading-->
        <h1 style="text-align: center;">Add a Comment to 
            <%= bet.homeTeamName %> vs
            <%= bet.awayTeamName %>
        </h1>
            <!--The Form-->
            <div style="width: 30%; margin: 25px auto">
                <form 
                    action="/group-match-bets/<%= bet._id %>/group-match-bet-proposals/<%= betProposal._id %>/comments" 
                    method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
               </form>
               <!-- Link to go back -->
               <a href="/group-match-bets/<%= bet._id %>/group-match-bet-proposals/<%= betProposal._id %>">Go Back</a>
          </div>   
     </div>
</div>
<% include ../partials/footer %>