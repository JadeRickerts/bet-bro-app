<% include ../partials/header.ejs %>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead"></p>
			<div class="list-group">
				<li class="list-group-item active">Info1</li>
				<li class="list-group-item">Info2</li>
				<li class="list-group-item">Info3</li>
			</div>
		</div>
		<div class="col-md-9">
			<h1><%= bet.homeTeamName %> vs <%= bet.awayTeamName %></h1>
			<div class="thumbnail">
				<img class="img-responsive" src="<%= bet.imageURL %>">
				<div class="caption-full">
					<h4 class="pull-right"><%= bet.betStatus %></h4>
					<p><%= bet.stadium %></p>
					<p><%= betProposal.amount %></p>
					<p><%= betProposal.numberOfBetters %></p>
					<a href="/group-match-bets/<%= bet.id %>/edit" class="btn btn-warning">Edit</a>
					<form id="delete-form" action="/group-match-bets/<%= bet._id %>?_method=DELETE" method="POST">
						<button class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>