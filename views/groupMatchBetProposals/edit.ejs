<% include ../partials/header.ejs %>

<div class="container">
     <div class="row">
          <!--The Heading-->
          <h1 style="text-align: center;">
            Edit Bet Proposal to 
            <%= bet.homeTeamName %> vs
            <%= bet.awayTeamName %>   
          </h1>
          <!--The Form-->
          <div style="width: 30%; margin: 25px auto">
               <form action="/group-match-bets/<%= bet._id %>/group-match-bet-proposals/<%= betProposal._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="number" name="betAmount" placeholder="Bet Amount">
                    </div>
                    <div class="form-group">
                      <select class="form-control" name="betPick">
                        <option value="homeWin"><%= bet.homeTeamName %> Win</option>
                        <option value="draw">Draw</option>
                        <option value="awayWin"><%= bet.awayTeamName %> Win</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <select class="form-control" name="numberOfBetters">
                        <option value="2">2 Betters</option>
                        <option value="3">3 Betters</option>
                      </select>
                    </div>
                    <div class="form-group">
                      <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div> 
               </form>
               <!-- Link to go back -->
               <a href="/bets">Go Back</a>
          </div>   
     </div>
</div>

<% include ../partials/footer %>