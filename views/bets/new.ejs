<% include ../partials/header.ejs %>

<div class="container">
     <div class="row">
          <!--The Heading-->
          <h1 style="text-align: center;">Create A New Bet</h1>
          <!--The Form-->
          <div style="width: 30%; margin: 25px auto">
               <form action="/bets" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="description" placeholder="description">
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="text" name="date" placeholder="date">
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="text" name="betType" placeholder="bet type">
                    </div>
                    <div class="form-group">
                         <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
               </form>
               <!-- Link to go back -->
               <a href="/bets">Go Back</a>
          </div>   
     </div>
</div>

