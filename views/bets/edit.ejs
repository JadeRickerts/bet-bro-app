<% include ../partials/header.ejs %>

<div class="container">
     <div class="row">
          <!--The Heading-->
          <h1 style="text-align: center;">Edit <%= bet.description %></h1>
          <!--The Form-->
          <div style="width: 30%; margin: 25px auto">
               <form action="/bets/<%= bet._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                         <input class="form-control" type="text" name="bet[description]" value="<%= bet.description %>">
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="text" name="bet[date]" value="<%= bet.date %>">
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="text" name="bet[betType]" value="<%= bet.betType %>">
                    </div>
                    <div class="form-group">
                         <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
               </form>
               <!-- Link to go back -->
               <a href="/bets">Go Back</a>
          </div>   
     </div>
</div>
<% include ../partials/footer %>